{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "*": [".yarn/cache/*"]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        // "esm": true,
        "swc": true,
        "experimentalSpecifierResolution": "node"
    },

    "include": ["src"]
}
